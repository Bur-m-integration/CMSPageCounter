<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="cms_page_counter" translate="label" sortOrder="10">
            <label>CMS Page Counter</label>
        </tab>
        <section id="cms_page_counter_section" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1"
                 translate="label">
            <label>Counter section</label>
            <tab>cms_page_counter</tab>
            <resource>MI_CMSPageCounter::config_mi_cmspagecounter</resource>
            <group id="cms_page_counter_group" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1"
                   translate="label">
                <label>Counter group</label>
                <field id="cms_page_counter_field" type="select" sortOrder="10" showInWebsite="1" showInStore="1"
                       showInDefault="1" translate="label">
                    <label>Enabled</label>
                    <comment>Counter field</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
